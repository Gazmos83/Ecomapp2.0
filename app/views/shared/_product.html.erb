

<div class="col-sm col-md-6 col-lg-4 productindex">

        <a href="#"><h3><%= product.name %></h3></a>
        <%= image_tag(product.image_url, class: "img-fluid") if product.image_url %>
        <p class="description"><%= product.description %></p>
        <p><%= product.colour %></p>
        <strong><td><%= product.price %></td></strong>
        <br>
        <td><%= link_to 'Show', product %></td>
        <td><% if signed_in? && current_user.admin? %><%= link_to 'Edit', edit_product_path(product) %><% end %></td>
        <td><% if signed_in? && current_user.admin? %><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
</div><!-- /col -->
