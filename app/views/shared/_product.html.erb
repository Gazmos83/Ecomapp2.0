

      <div class="col-sm col-md-3 col-lg-4">

        <a href="#"><h3><%= product.name %></h3></a>
        <%= image_tag(product.image_url, class: "img-fluid") if product.image_url %>
        <p><%= product.description %></p>
        <p><%= product.colour %></p>
        <strong><td><%= product.price %></td></strong>
