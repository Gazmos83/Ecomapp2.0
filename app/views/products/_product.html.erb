
  <% cache product do %>
  <div class="col-lg-3 col-md-3 col-sm-12">

    <a href="#"><h4><%= link_to product.name, product %></h4></a>
    <%= image_tag(product.image_url, class: "img-fluid product-img") if product.image_url %>
    <p class="description"><%= product.description %></p>
    <strong><td><%= number_to_currency(product.price, :unit => "â‚¬") %><% end %></td></strong>

    <br>

      <td>
        <% if signed_in? && current_user.admin? %>
         <%= link_to 'Edit', edit_product_path(product) %>
         <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'} %>
        <% end %>
      </td>



  </div><!-- /col -->
